<?xml version="1.0" encoding="utf-8"?>
<FPCardLayout>
    <FPScrollView>
        <FPCardLayout>
            <FPLayout name="main_container" backgroundColor="#FFFFFF" orientation="vertical">
                <FPImageView name="recipe_photo" margin="8 8 8 8" scaleType="centerCrop" size="match 300"
                    url="placeholder" />
                <FPLabel name="recipe_title" align="left" margin="10 0 10 10" maxLines="3"
                    size="match wrap" textColor="#000000" textSize="32" title="" />
                <FPLabel name="recipe_description" margin="10 10 10 10" size="match wrap" textSize="17" />
                <FPLabel margin="10 0 10 10" size="match wrap" textSize="24" title="Ingredients:" />
                <FPLayout name="ingredients_container" orientation="vertical">
                    <!-- Ingredients will be created here -->
                </FPLayout>
                <FPlayout margin="10 0 10 0" orientation="horizontal">
                    <FPButton name="convert_button" margin="0 0 5 0" title="Convert" />
                    <FPButton name="mail_ingredients_button" margin="5 00 0 0" title="Mail the list"/>
                </FPlayout>
                <FPLabel margin="10 10 10 10" size="-1 -2" textSize="24" title="Instructions" />
                <FPLabel name="recipe_instructions" margin="10 0 10 30" size="match wrap" textSize="17" />
            </FPLayout>
        </FPCardLayout>
    </FPScrollView>
</FPCardLayout>